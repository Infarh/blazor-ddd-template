{
  "Database": "InMemory",
  "ConnectionStrings": {
    "SqlServer": "Data Source=(localdb)\\MSSqlLocalDb;Initial Directory=SolutionTemplate.db;MultipleActiveResultSet=true;",
    "Sqlite": "Data Source=RRJ-Express2.db;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Information",
        "System.Net.Http.HttpClient.WebStoreAPI": "Warning"
      },
      "FormatterOptions": {
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss:ffff\t",
        "UseUtcTimestamp": true
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.RollingFile"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "outputTemplate": "[{Timestamp:HH:mm:ss.fff zzz} {SourceContext} [{Level}]{NewLine}{Message}{NewLine}{Exception}",
        "theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Grayscale, Serilog.Sinks.Console"
      },
      {
        "Name": "RollingFile",
        "Args": {
          "fileSizeLimitBytes": 104857600,
          "logDirectory": ".\\Logs",
          "pathFormat": "log[{Date}].log",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {SourceContext} {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "TickedStore.BlazorUI.Hosting"
    }
  },
  "AllowedHosts": "*"
}
