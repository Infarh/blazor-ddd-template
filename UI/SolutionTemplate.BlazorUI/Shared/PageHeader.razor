@using Microsoft.Extensions.Logging
@inject NavigationManager NavigationManager
@inject ILogger<PageHeader> Logger
@{ const string root = "/"; }

<header>

    <div class="container pt-5 pb-3">
        <div class="row">
            <div class="col-md-3">
                <a @onclick="() => NavigationManager.NavigateTo(root)" href="/">
                    <img class="img-logo" src="Images/Logo.png" alt="SolutionTemplateLogo">
                </a>
            </div>
            <div class="col-md-9 logo-info">
                <h3>SolutionTemplate</h3>
            </div>
        </div>
        
        <div class="row pb-3">
            <MainMenu/>
        </div>
    </div>

</header>

